public class Main {
  public static void main(String[] args) {
    double tutar,kdvliFiyat,kdvsizFiyat,kdv = 0.3;
    
    Scanner input = new Scanner(System.in);
    System.out.println("Ürünün tutarını giriniz : ");
    tutar = input.nextDouble();
    kdvliFiyat = tutar + (tutar*kdv);
    System.out.println("Ürünün KDV'li fiyatı : " + kdvliFiyat);
     kdvsizFiyat = tutar + (tutar*kdvsizFiyat);
    System.out.println("Ürünün KDV'siz fiyatı : " + kdvsizFiyat);
